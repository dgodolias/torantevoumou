@page
@model Namespace.ForgotPassword

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Ανάκτηση Κωδικού Πρόσβασης</title>
    <link rel="stylesheet" href="~/css/login.css"> <!-- Link to the CSS file -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
    <!-- loader CSS -->
    <link rel="stylesheet" type="text/css" href="~/css/loader.css">
</head>
<body>
    <div class="loader">
        <div style="--i: 1"></div>
        <div style="--i: 2"></div>
        <div style="--i: 3"></div>
        <div style="--i: 4"></div>
    </div>
    <div class="bg-img">
        <div class="content">
            <header>Ανάκτηση Κωδικού Πρόσβασης</header>
            <form method="post" id="forgot-password-form">
                @Html.AntiForgeryToken()
                <div class="field">
                    <span class="fa fa-user"></span>
                    <input id="email" name="Email" type="text" required placeholder="Email">
                </div>
                <div class="field">
                    <button type="submit" id="button">Αποστολή Email</button>
                </div>
            </form>
            <div class="signup">
                Έχετε λογαριασμό;
                <a href="/Login">Σύνδεση</a>
            </div>
        </div>
    </div>
    <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-firestore.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-auth.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-database.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/js/forgot-password.js"></script> <!-- Link to the JS file -->
</body>
</html>
