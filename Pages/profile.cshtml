@page
@model Namespace.profile
@{
    ViewData["Title"] = "Profile";
}

<!DOCTYPE html>
<html>

<head>
    <title>@ViewData["Title"] - Profile</title>
    <link rel="stylesheet" type="text/css" href="~/css/profile.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<style>
body {
    font-family: 'Roboto', sans-serif;
    background-color: #f0f5f7;
    margin: 0;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
}

.flex-container {
    display: flex;
    justify-content: center;
    width: 100%;
    height: 100%;
}

.profile-sidebar {
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    width: 360px;
    padding: 24px;
    text-align: center;
    margin: 24px;
    flex-shrink: 0;
    height: calc(100% - 48px);
}

.embedded-page {
    flex-grow: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
    overflow: auto;
    position: relative;
}

.profile-header {
    position: relative;
    margin-bottom: 24px;
}

.profile-picture {
    background-color: #695cfe;
    border-radius: 50%;
    width: 96px;
    height: 96px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 48px;
    color: #fff;
    margin: 0 auto 12px;
}

.profile-header h1 {
    font-size: 21.6px;
    color: #333;
}

.profile-form {
    text-align: left;
}

.form-group {
    margin-bottom: 18px;
}

.form-group label {
    display: block;
    font-weight: bold;
    margin-bottom: 6px;
    color: #555;
}

.input-container {
    display: flex;
    align-items: center;
    position: relative;
}

.input-container input {
    width: calc(100% - 48px);
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 6px;
    transition: all 0.3s;
}

.input-container input:focus {
    border-color: #695cfe;
    outline: none;
}

.edit-button {
    background-color: transparent;
    border: none;
    color: #695cfe;
    cursor: pointer;
    margin-left: 12px;
    transition: color 0.3s;
}

.edit-button:hover {
    color: #0056b3;
}

section.home {
    height: -webkit-fill-available;
    background: linear-gradient(to right, rgba(156, 165, 255, 0.7) 0%, rgb(0 255 114 / 60%) 100%);
}

i#profile-pic-default {
    font-size: 50px;
}

.zoom-controls {
    padding: 30px;
    position: absolute;
    top: 20px;
    left: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.zoom-controls button {
    background: none;
    cursor: pointer;
    margin-bottom: 5px;
    font-size: 20px;
    width: 40px;
    height: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
}

#profile-page-wrapper {
    width: 100%;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
}

#profile-page {
    transition: transform 0.3s ease;
}
</style>

<body>
    <div id="profile-page-wrapper">
        <div class="zoom-controls">
            <button id="zoom-in">➕</button>
            <button id="zoom-out">➖</button>
        </div>
        <div id="profile-page">
            <div class="flex-container">
                <div class="profile-sidebar">
                    <div class="profile-header">
                        <div class="profile-picture">
                            <i class="fas fa-user" id="profile-pic-default"></i>
                        </div>
                        <h1>Profile</h1>
                    </div>

                    @if (Model.UserProfile != null)
                    {
                        <div class="profile-form">
                            <form>
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <div class="input-container">
                                        <input type="email" id="email" value="@Model.UserProfile.Email" readonly />
                                        <button type="button" id="changeEmail" class="edit-button"><i
                                                class="fas fa-pencil-alt"></i></button>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="firstName">First Name</label>
                                    <div class="input-container">
                                        <input type="text" id="firstName" value="@Model.UserProfile.FirstName" readonly />
                                        <button type="button" id="changeFirstName" class="edit-button"><i
                                                class="fas fa-pencil-alt"></i></button>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="lastName">Last Name</label>
                                    <div class="input-container">
                                        <input type="text" id="lastName" value="@Model.UserProfile.LastName" readonly />
                                        <button type="button" id="changeLastName" class="edit-button"><i
                                                class="fas fa-pencil-alt"></i></button>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="phoneNumber">Phone Number</label>
                                    <div class="input-container">
                                        <input type="text" id="phoneNumber" value="@Model.UserProfile.PhoneNumber" readonly />
                                        <button type="button" id="changePhoneNumber" class="edit-button"><i
                                                class="fas fa-pencil-alt"></i></button>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="username">Username</label>
                                    <div class="input-container">
                                        <input type="text" id="username" value="@Model.UserProfile.Username" readonly />
                                        <button type="button" id="changeUsername" class="edit-button"><i
                                                class="fas fa-pencil-alt"></i></button>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <div class="input-container">
                                        <input type="password" id="password" value="@Model.UserProfile.Password" readonly />
                                        <button type="button" id="changePassword" class="edit-button"><i
                                                class="fas fa-pencil-alt"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    }
                    else
                    {
                        <p>No user information available.</p>
                    }
                </div>
            </div>
        </div>
    </div>
    <script>
(function() {
    let currentProfileScale = parseFloat(localStorage.getItem('profilePageScale')) || 1;

    document.getElementById('profile-page').style.transform = `scale(${currentProfileScale})`;

    document.getElementById('zoom-in').addEventListener('click', function() {
        if (currentProfileScale < 2) {
            currentProfileScale += 0.1;
            document.getElementById('profile-page').style.transform = `scale(${currentProfileScale})`;
            localStorage.setItem('profilePageScale', currentProfileScale);
        }
    });

    document.getElementById('zoom-out').addEventListener('click', function() {
        if (currentProfileScale > 0.5) {
            currentProfileScale -= 0.1;
            document.getElementById('profile-page').style.transform = `scale(${currentProfileScale})`;
            localStorage.setItem('profilePageScale', currentProfileScale);
        }
    });

    document.addEventListener('DOMContentLoaded', function() {
        const savedScale = localStorage.getItem('profilePageScale');
        if (savedScale) {
            currentProfileScale = parseFloat(savedScale);
            document.getElementById('profile-page').style.transform = `scale(${currentProfileScale})`;
        }
    });
})();

    </script>
    <script src="~/js/profile.js"></script>
</body>

</html>
